<%- include("header"); -%>

<div class="container">
  <h1>Compose</h1>
  <form action="/compose" method="post">
    <div class="form-group">
      <label for="usr">Title</label>
      <input type="text" name="postTitle" class="form-control" id="usr" />
    </div>
    <div class="form-group">
      <label for="comment">Post</label>
      <textarea
        class="form-control"
        rows="5"
        id="comment"
        name="postBody"></textarea>
    </div>
    <div class="btn-group">
      <button type="submit" class="btn btn-primary" name="button">
        Publish
      </button>
    </div>
  </form>
</div>
<%- include("footer"); -%>
